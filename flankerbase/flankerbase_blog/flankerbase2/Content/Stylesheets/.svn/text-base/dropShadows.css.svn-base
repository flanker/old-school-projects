/*Appearance of Drop Shadow Text*/
span.shadow
{
	top: 1px;
	left: 0px; /*color: #E2E3E5;*/
	color: #E2E3E5;
}

/*necessities*/
.highContrast
{
	position: relative;
	color: #1A1A1A;
}
.highContrast span
{
	position: relative;
}
span.shadow
{
	position: absolute;
}
/*highContrastDisabled*/
.highContrastDisabled
{
	color: #5A5A5A;
}
