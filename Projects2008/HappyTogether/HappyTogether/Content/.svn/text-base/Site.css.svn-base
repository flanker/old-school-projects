/* 自定义 mapDivRight --------------------------------------------------------------*/
#loading
{
	position: absolute;
	top: 100px;
	left: 110px;
	display: none;
}
#resultList ul
{
	list-style-type: none;
	padding: 0px;
	margin: 0px;
}
#resultList ul li:first-child
{
	border-top: 1px dashed #5c87b2;
}
#resultList ul li
{
	width: 80%;
	border-bottom: 1px dashed #5c87b2;
	line-height: 1.1em;
	padding: 0.7em 0 0.6em;
	margin: 0px auto;
}
#resultList ul li:hover
{
	background-color: #C6DDDD;
}
#resultList ul li .thumb
{
	position: absolute;
	display: block;
	margin: 0px 5px 0px 5px;
	height: 45px;
	width: 60px;
	overflow: hidden;
}
#resultList ul li .thumb img
{
	height: 45px;
	width: 60px;
}
#resultList ul li .result-body
{
	display: block;
	margin-left: 70px;
	min-height: 45px;
	overflow: hidden;
}
#resultList ul li .result-body span
{
	display: block;
	margin-top: 5px;
}
