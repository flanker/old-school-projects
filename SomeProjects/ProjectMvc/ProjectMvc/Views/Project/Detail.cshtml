@model ProjectXAF.Module.Project
@using ProjectXAF.Module

@{
    ViewBag.Title = Model.Code + " - " + Model.Title + " Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Code - @Model.Title</h2>

<div class="display-label">Code</div>
<div class="display-field">@Model.Code</div>

<div class="display-label">Title</div>
<div class="display-field">@Model.Title</div>

<div class="display-label">Description</div>
<div class="display-field">@Model.Description</div>

<div class="display-label">StartDate</div>
<div class="display-field">@String.Format("{0:g}", Model.StartDate)</div>

<div class="display-label">EndDate</div>
<div class="display-field">@String.Format("{0:g}", Model.EndDate)</div>

<h2>Year Projects:</h2>
@foreach (YearProject item in Model.YearProjects)
{
    <div>@item.Code</div>
    <div>@item.Title</div>
}
<p>
    @Html.ActionLink("Back to List", "Index")
</p>

